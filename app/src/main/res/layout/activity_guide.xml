<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/guide_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 가이드라인"
        android:fontFamily="@font/suit_bold"
        android:textSize="24sp"
        android:textColor="@color/dark_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/guide_bg"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:background="@drawable/guide_image"
        app:layout_constraintTop_toBottomOf="@id/guide_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/guide_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/guide_bg"
        android:text="병해충이 발견되지 않았습니다. \n위와 같이 하나의 잎이 잘 보이도록 사진을 찍어주세요."
        android:textColor="@color/error_red"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/guide_back_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/guide_tv"
        android:layout_marginTop="30dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/dark_green"
        android:text="이미지 다시 업로드"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>