<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.SearchActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_category_part_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:visibility="visible">

        <ImageView
            android:id="@+id/category_back_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_greenfarm_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/category_first_tv"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="1"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/category_back_ic"
            app:layout_constraintTop_toTopOf="@id/category_back_ic"
            app:layout_constraintBottom_toBottomOf="@id/category_back_ic"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/category_firststep_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="STEP"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/category_first_tv"
            app:layout_constraintTop_toTopOf="@id/category_back_ic"
            app:layout_constraintBottom_toBottomOf="@id/category_back_ic"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/category_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="작물을 선택해주세요"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_firststep_tv"
            android:layout_marginTop="80dp"
            />


        <ImageView
            android:id="@+id/category_bean_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_greenfarm_green_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_text_tv"
            android:layout_marginTop="70dp"
            />


        <TextView
            android:id="@+id/category_bean_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="콩"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@id/category_bean_bt"
            app:layout_constraintTop_toTopOf="@id/category_bean_bt"
            app:layout_constraintBottom_toBottomOf="@id/category_bean_bt"
            android:layout_marginStart="32dp"
            />

        <ImageView
            android:id="@+id/category_bean_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_greenfarm_bean_category"
            app:layout_constraintTop_toTopOf="@id/category_bean_bt"
            app:layout_constraintBottom_toBottomOf="@id/category_bean_bt"
            app:layout_constraintStart_toEndOf="@id/category_bean_text_tv"
            android:layout_marginStart="102dp"
            />


        <ImageView
            android:id="@+id/category_redbean_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_greenfarm_white_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_bean_bt"
            android:layout_marginTop="54dp"
            />


        <TextView
            android:id="@+id/category_redbean_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="팥"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@id/category_redbean_bt"
            app:layout_constraintTop_toTopOf="@id/category_redbean_bt"
            app:layout_constraintBottom_toBottomOf="@id/category_redbean_bt"
            android:layout_marginEnd="32dp"
            />

        <ImageView
            android:id="@+id/category_redbean_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_greenfarm_redbean_category"
            app:layout_constraintTop_toTopOf="@id/category_redbean_bt"
            app:layout_constraintBottom_toBottomOf="@id/category_redbean_bt"
            app:layout_constraintEnd_toStartOf="@id/category_redbean_text_tv"
            android:layout_marginEnd="102dp"
            />

        <ImageView
            android:id="@+id/category_sesame_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_greenfarm_green_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_redbean_bt"
            android:layout_marginTop="54dp"
            />

        <TextView
            android:id="@+id/category_sesame_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="참깨"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@id/category_sesame_bt"
            app:layout_constraintTop_toTopOf="@id/category_sesame_bt"
            app:layout_constraintBottom_toBottomOf="@id/category_sesame_bt"
            android:layout_marginStart="32dp"
            />

        <ImageView
            android:id="@+id/category_sesame_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_greenfarm_sesame_category"
            app:layout_constraintTop_toTopOf="@id/category_sesame_bt"
            app:layout_constraintBottom_toBottomOf="@id/category_sesame_bt"
            app:layout_constraintStart_toEndOf="@id/category_sesame_text_tv"
            android:layout_marginStart="102dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_upload_part_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:visibility="gone">

        <ImageView
            android:id="@+id/upload_back_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_greenfarm_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/upload_second_tv"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="2"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/upload_back_ic"
            app:layout_constraintTop_toTopOf="@id/upload_back_ic"
            app:layout_constraintBottom_toBottomOf="@id/upload_back_ic"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/upload_secondstep_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="STEP"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/upload_second_tv"
            app:layout_constraintTop_toTopOf="@id/upload_back_ic"
            app:layout_constraintBottom_toBottomOf="@id/upload_back_ic"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/upload_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="사진을 선택해주세요"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_secondstep_tv"
            android:layout_marginTop="80dp"
            />


        <ImageView
            android:id="@+id/upload_image_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_greenfarm_image_upload"
            app:layout_constraintTop_toTopOf="@id/upload_image_bg_iv"
            app:layout_constraintStart_toStartOf="@id/upload_image_bg_iv"
            app:layout_constraintEnd_toEndOf="@id/upload_image_bg_iv"
            app:layout_constraintBottom_toBottomOf="@id/upload_image_bg_iv"
            />


        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@id/upload_image_bg_iv"
            app:layout_constraintEnd_toEndOf="@id/upload_image_bg_iv"
            app:layout_constraintTop_toTopOf="@id/upload_image_bg_iv"
            app:layout_constraintBottom_toBottomOf="@id/upload_image_bg_iv"
            />

        <ImageView
            android:id="@+id/upload_image_bg_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_greenfarm_image_bg_upload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/upload_text_tv"
            />


        <ImageView
            android:id="@+id/upload_camera_bg_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_greenfarm_green_bg_upload"
            app:layout_constraintStart_toStartOf="@id/upload_image_bg_iv"
            app:layout_constraintTop_toBottomOf="@id/upload_image_bg_iv"
            android:layout_marginTop="40dp"
            />


        <ImageView
            android:id="@+id/upload_camera_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            app:layout_constraintTop_toTopOf="@id/upload_camera_bg_iv"
            app:layout_constraintBottom_toBottomOf="@id/upload_camera_bg_iv"
            app:layout_constraintStart_toStartOf="@id/upload_camera_bg_iv"
            android:layout_marginStart="-13dp"
            />

        <TextView
            android:id="@+id/upload_camera_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="사진 촬영"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/upload_camera_iv"
            app:layout_constraintTop_toTopOf="@id/upload_camera_iv"
            app:layout_constraintBottom_toBottomOf="@id/upload_camera_iv"
            android:layout_marginStart="50dp"
            />

        <ImageView
            android:id="@+id/upload_gallary_bg_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_greenfarm_white_bg_upload"
            app:layout_constraintStart_toStartOf="@id/upload_image_bg_iv"
            app:layout_constraintTop_toBottomOf="@id/upload_camera_bg_iv"
            android:layout_marginTop="20dp"
            />


        <ImageView
            android:id="@+id/upload_gallary_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gallary"
            app:layout_constraintTop_toTopOf="@id/upload_gallary_bg_iv"
            app:layout_constraintBottom_toBottomOf="@id/upload_gallary_bg_iv"
            app:layout_constraintEnd_toEndOf="@id/upload_gallary_bg_iv"
            android:layout_marginEnd="-30dp"
            />

        <TextView
            android:id="@+id/upload_gallary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="갤러리에서 가져오기"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/upload_gallary_iv"
            app:layout_constraintTop_toTopOf="@id/upload_gallary_iv"
            app:layout_constraintBottom_toBottomOf="@id/upload_gallary_iv"
            android:layout_marginEnd="25dp"
            />

        <ImageView
            android:id="@+id/upload_start_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_start_upload"
            app:layout_constraintTop_toBottomOf="@id/upload_gallary_bg_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/upload_start_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="병해충 검출 시작"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/upload_start_bt"
            app:layout_constraintEnd_toEndOf="@id/upload_start_bt"
            app:layout_constraintTop_toTopOf="@id/upload_start_bt"
            app:layout_constraintBottom_toBottomOf="@id/upload_start_bt"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>