<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_text_bg_cv"
        android:layout_width="296dp"
        android:layout_height="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <View
            android:id="@+id/dialog_text_bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </View>

        <TextView
            android:id="@+id/dialog_text2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/error_red"
            android:letterSpacing="-0.01"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="경고"
            />

        <TextView
            android:id="@+id/dialog_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_regular"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:textColor="@color/error_red"
            android:letterSpacing="-0.01"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="전염성 강한 병해충이 발견되었습니다. \n 아래 전화번호로 신고해주세요."/>

        <TextView
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_password_error"
            android:layout_marginTop="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/dark_green"
            android:text="1833-8572"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/suit_bold"
            />

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/delete_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_close_ic"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleX="0.5"
        android:scaleY="0.5"
        />



</androidx.constraintlayout.widget.ConstraintLayout>